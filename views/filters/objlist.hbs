<div class="container-md p-4 mx-auto">
    {{#if prod}}
    <table style="text-align: center;" class="table">
        <thead class='thead-dark'>
            <tr>
                <th>
                    Produto
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    €/Unidade
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each prod}}
            <tr>
                <td>
                    {{p_name}}
                </td>
                <td>
                    {{quantity}}
                </td>
                <td>
                    {{cost_unit}} €
                </td>
                <td>
                    {{'(quantity * cost_unit)'}} €
                </td>
                {{#if ../user.admin}}
                <td>
                    <a href="/objlist/delete/{{id}}" class="btn btn-danger mx-0 px-0 btn-sm btn-block" role="button">
                    DELETE
                    </a>
                </td>
                <td>
                    <a href="/objlist/edit/{{id}}" class="btn btn-primary mx-0 px-0 btn-sm btn-block" role="button">
                    EDIT
                    </a>
                </td>
                {{/if}}
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
        <div class="container-sm rounded mx-auto py-3 bg-dark text-white">
            <h1 style="text-align: center;">There aren't any products yet</h1>
        </div>
    {{/if}}
</div>
{{#if user.admin}}
<div class="container-sm m-4 mx-auto">
    <button type="button" class="btn btn-success btn-lg btn-block" data-toggle="modal" data-target="#formprod" role="button">
        ADD
    </button>
</div>
{{/if}}