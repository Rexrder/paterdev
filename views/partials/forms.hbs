<div class="modal" id="formprod" role="form">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Product Information</h3>
                    <button type="button" class="close" data-dismiss="modal">
                        &times
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/objlist/add" method="POST">
                        <div class="form-group">
                            <input type="text" minlength="3" name="p_name" placeholder="Product" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" min="0" name="cost_unit" placeholder="â‚¬/Unit" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="number" step="1" min="0" name="quantity" placeholder="Quantidade" class="form-control">
                        </div>
                        {{!<div class="form-group">
                            <input type="number" step="1" min="1" max="16" name="drawer" placeholder="Gaveta" class="form-control">
                        </div>!}}
                        <button class="btn btn-primary btn-block">
                            ADD
                        </button>
                    </form>          
                </div>
            </div>
        </div>
    </div>

<div class="modal" id="formreq" role="form">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Request</h3>
                    <button type="button" class="close" data-dismiss="modal">
                        &times
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/reqlist/add" method="POST">
                        <div class="row">
                            <div class="col">
                                <select class="custom-select" placeholder="Product" name="prod" required>
                                    {{#each product}}
                                    <option value = {{id}}>{{p_name}}</option>
                                    {{/each}}
                                </select>
                                <small class="form-text text-muted">Product</small>
                            </div>
                            <div class="col">
                                <input type="number" step="1" min="1" class="form-control" placeholder="Quantity" name="quantity" required>
                            </div>
                        </div>
                        <div class="row my-3">
                            <div class="col">
                                <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="reqtype" id="inlineRadio2" value="1" checked>
                                <label class="form-check-label" for="inlineRadio2">Deposit</label>
                            </div>
                            </div>
                            <div class="col">
                                <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="reqtype" id="inlineRadio1" value="0">
                                <label class="form-check-label" for="inlineRadio1">Withdrawal</label>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">
                            REQUEST
                        </button>
                        {{#if user.admin}}
                        <a class="btn btn-primary float-right" href="/objlist">
                            REQUEST NEW PRODUCT
                        </a>
                        {{/if}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


<div class="modal" id="confirmDel" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete your account?</p>
      </div>
      <a type= "button" class="btn btn-primary btn-sm mt-0 mx-3 px-4" href="/profile/delete">
            YES
        </a>
        <button type="button" class="btn btn-secondary btn-sm my-3 mx-3 px-4" data-dismiss="modal">
            NO
        </button>
    </div>
  </div>
</div>

<div class="modal" id="changeName" role="form">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Change Name of Account</h3>
                    <button type="button" class="close" data-dismiss="modal">
                        &times
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/profile/edit" method="POST">
                        <div class="row">
                            <div class="col">
